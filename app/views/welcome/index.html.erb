<center>
  <h1>RUMOR</h1>
  <h3>Consultar Cardápio</h3>

  <%= form_tag(welcome_index_path, :method => "get") do %>  
    <div class="input-group">  
      <p> 
      <p> Data </p> 
      <%= date_field_tag :data%>
      </p>
      
      <p> 
      <p> Campus </p> 
      <%= text_field_tag :campus%>
      </p>  
      
      <p>
      <%= button_tag "Consultar", id: "consultar"%> 
      </p>

    </div>  
  <% end %>
  
  <br>

