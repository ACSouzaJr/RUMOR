    <tr>
    <th colspan="2"> Café da Manhã </th>
    </tr>
    </thead>
    <tbody>
    <tr> 
    <td>Bedidas Quentes:</td>
    <td> <%= @cardapio.bebidas_quentes %></td>
    </tr>
    <tr> 
    <td>Bedida Vegetariana:</td>
    <td> <%= @cardapio.bebida_vegetariana %></td>
