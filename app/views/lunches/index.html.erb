<p id="notice"><%= notice %></p>

<h1>Lunches</h1>

<table>
  <thead>
    <tr>
      <th>Salad</th>
      <th>Sauce</th>
      <th>Main course</th>
      <th>Garnish</th>
      <th>Vegetarian dish</th>
      <th>Accompaniments</th>
      <th>Dessert</th>
      <th>Juice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lunches.each do |lunch| %>
      <tr>
        <td><%= lunch.salad %></td>
        <td><%= lunch.sauce %></td>
        <td><%= lunch.main_course %></td>
        <td><%= lunch.garnish %></td>
        <td><%= lunch.vegetarian_dish %></td>
        <td><%= lunch.accompaniments %></td>
        <td><%= lunch.dessert %></td>
        <td><%= lunch.juice %></td>
        <td><%= link_to 'Show', lunch %></td>
        <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
        <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

